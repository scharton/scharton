        },
                 {
                        "item": "Add 3 oz fresh lemon juice"         
        },
                 {
                        "item": "Add 1/2 oz simple syrup"         
        },
                 {
                        "item": "Add 2-3 oz bourbon"         
        },
                 {
                        "item": "Shake agressively for 20 seconds"         
        },
                 {
                        "item": "Strain into a chilled glass or a glass with ice"                  
        }      
    ]   
}
